@using System.Security.Claims
@inject Shop.Services.DatabaseService _databaseService
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string userId = _databaseService.GetUser(User.FindFirstValue(ClaimTypes.NameIdentifier)).Id;
}
<h1>Click link in the email to gain pro status!</h1>
<span>Something gone wrong? </span>
<a asp-controller="Settings" asp-action="SendEmailConfirmation" asp-route-userId="@userId" style="color: dodgerblue; text-decoration: none;">Send another email</a>
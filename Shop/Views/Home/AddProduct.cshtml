@{
    ViewData["Title"] = "Add-Product";
}
<h1>Choose what product you want to add: </h1>
<hr />
<br />
<ul class="category-list">
    @foreach(var item in Model)
    {
        <li><a asp-controller="@item.Name" asp-action="Create" id="category-item"><button id="category-item-btn" class="btn btn-light border border-dark">@item.Name</button></a></li>
        <br />
    }
</ul>
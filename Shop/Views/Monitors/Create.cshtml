@model Shop.ViewModels.MonitorViewModel
@{
    ViewData["Title"] = "Create";
}
<h1 id="form-title">Create</h1>
<br />
<form asp-action="Create" id="monitor-create-form" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input id="monitor-name-input" asp-for="Name" class="form-control"/>
        <small id="monitor-name-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Price></label>
        <input id="monitor-price-input" name="Price" class="form-control" asp-for=Price/>
        <small id="monitor-price-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Refreshening></label>
      <select id="monitor-refreshening-input" name="Refreshening" class="form-control" asp-for=Refreshening>
            <option selected disabled value="">SELECT</option>
            <option>60Hz</option>
            <option>75Hz</option>
            <option>144Hz</option>
            <option>240Hz</option> 
        </select> 
        <small id="monitor-refreshening-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Resolution></label>
        <select id="monitor-resolution-input" name="Resolution" asp-for=Resolution class="form-control">
            <option selected disabled value="">SELECT</option>
            <option>720p</option>
            <option>1080p</option>
            <option>1440p</option>
        </select>
        <small id="monitor-resolution-error"></small>
    </div>
    <br />
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="DefaultPhoto" id="monitor-checkbox" onclick="setDefaultPhoto('upload-monitor-photo', this.id)"/>
            <label class="form-check-label" asp-for="DefaultPhoto">Set default photo</label>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=MonitorPhoto></label>
        <input type="file" class="form-control" asp-for=MonitorPhoto id="upload-monitor-photo" onchange="validateImage(this.id, 'photo-error')"/>
        <span asp-validation-for=MonitorPhoto></span> 
        <small id="photo-error"></small>
    </div>
    <br />
    <br />
    <input type="submit" value="Create" class="btn btn-dark submit-button"/>
    <br />
</form>
<script src="~/js/monitorCreateFormValidation.js"></script>

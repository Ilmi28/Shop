@model Shop.ViewModels.MonitorViewModel
@{
    ViewData["Title"] = "Edit";
}
<h1 id="form-title" value="edit">Edit</h1>
<br />
<form asp-controller="Monitors" asp-action="Edit" id="monitor-create-form" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input id="monitor-name-input" asp-for="Name" class="form-control"/>
        <small id="monitor-name-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Price></label>
        <input id="monitor-price-input" name="Price" class="form-control" asp-for=Price/>
        <small id="monitor-price-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Refreshening></label>
        <select id="monitor-refreshening-input" name="Refreshening" class="form-control" asp-for=Refreshening>
            <option>60Hz</option>
            <option>75Hz</option>
            <option>144Hz</option>
            <option>240Hz</option> 
        </select>
        <small id="monitor-refreshening-error"></small>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Resolution></label>
        <select id="monitor-resolution-input" name="Resolution" asp-for=Resolution class="form-control">
            <option>720p</option>
            <option>1080p</option>
            <option>1440p</option>
        </select>
        <small id="monitor-resolution-error"></small>
    </div>
    <br />
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="DefaultPhoto" id="monitor-checkbox" onclick="setDefaultPhoto()" />
            <label class="form-check-label" asp-for="DefaultPhoto">Set default photo</label>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="MonitorPhoto"></label>
        @if (!Model.DefaultPhoto)
        {
            <input asp-for="MonitorPhoto" class="form-control" id="upload-photo" onchange="validateImage()"/>
        }
        else{
            <input asp-for="MonitorPhoto" class="form-control" id="upload-photo" onchange="validateImage()" disabled/>
        }
        <small id="photo-error"></small>
    </div>
    <br />
    <br />
    <input type="submit" value="Edit" class="btn btn-warning submit-button-edit"/>
    <a asp-controller="Monitors" asp-action="Index"><input type="button" value="Cancel" class="btn btn-primary cancel-button-edit"/></a>
    <br />
</form>
<script src="~/js/monitorCreateFormValidation.js"></script>

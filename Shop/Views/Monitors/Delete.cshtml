@{
    ViewData["Title"] = "Delete";
}
<h1 style="text-align: center">Are you sure you want delete monitor with name @Model.Name?</h1>
<div class="delete-page-buttons">
    <form method="post">
        <button type="submit" class="btn btn-danger delete-button">Delete</button>
    </form>
    <a asp-controller="Monitors" asp-action="Index"><input type="button" value="No, return" class="btn btn-primary return-button"/></a>
</div>
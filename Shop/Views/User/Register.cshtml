@model Shop.Models.User
@{
}
<h1>Register</h1>
<br />
<form asp-action="Register" id="register-form">
    <div class="form-group">
        <label asp-for=Name></label>
        <input asp-for="Name" class="register-name-input form-control"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Email></label>
        <input asp-for="Email" class="register-name-input"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for=Password></label>
        <input asp-for="Password" class="register-name-input"/>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-dark" value="Submit"/>
</form>